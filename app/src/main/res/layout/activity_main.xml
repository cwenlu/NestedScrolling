<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cwl.nestedscrolling.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nestedscrolling基础原理示例"
        android:onClick="simpleAction"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nested"
        android:onClick="nestedAction"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="behavior"
        android:onClick="behaviorAction"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统behavior测试"
        android:onClick="behaviorAction2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="折叠相关控件运用"
        android:onClick="viewUseAction"/>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bottom_sheet_behavior"
        android:onClick="sheetAction"/>

</LinearLayout>
